<Window x:Class="WorkOrderManagementSystem.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Work Order Management System - Register" Height="747" Width="491"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0"
        ResizeMode="NoResize">
	<Grid>
		<ScrollViewer>
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
				<TextBlock Text="Work Order Management System" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           TextAlignment="Center" 
                           Margin="0,0,0,30"/>

				<TextBlock Text="Create Account" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

				<TextBlock Text="First Name" FontSize="12" Margin="0,0,0,5"/>
				<TextBox Name="FirstNameTextBox" Height="35" Padding="10" FontSize="13" Margin="0,0,0,12"/>

				<TextBlock Text="Last Name" FontSize="12" Margin="0,0,0,5"/>
				<TextBox Name="LastNameTextBox" Height="35" Padding="10" FontSize="13" Margin="0,0,0,12"/>

				<TextBlock Text="Username" FontSize="12" Margin="0,0,0,5"/>
				<TextBox Name="UsernameTextBox" Height="35" Padding="10" FontSize="13" Margin="0,0,0,12"/>

				<TextBlock Text="Email" FontSize="12" Margin="0,0,0,5"/>
				<TextBox Name="EmailTextBox" Height="35" Padding="10" FontSize="13" Margin="0,0,0,12"/>

				<TextBlock Text="Password" FontSize="12" Margin="0,0,0,5"/>
				<PasswordBox Name="PasswordBox" Height="35" Padding="10" FontSize="13" Margin="0,0,0,12"/>

				<TextBlock Text="Confirm Password" FontSize="12" Margin="0,0,0,5"/>
				<PasswordBox Name="ConfirmPasswordBox" Height="35" Padding="10" FontSize="13" Margin="0,0,0,20"/>

				<Button Name="RegisterButton"
                        Content="Register" 
                        Height="40" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="RegisterButton_Click"/>

				<TextBlock Name="ErrorMessage" 
                           Foreground="#F44336" 
                           TextWrapping="Wrap" 
                           Margin="0,15,0,0"
                           TextAlignment="Center"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
					<TextBlock Text="Already have an account? " Foreground="#666"/>
					<Button Name="BackLink" 
                            Content="Login here" 
                            Background="Transparent" 
                            Foreground="#2196F3"
                            Click="BackLink_Click"
                            Cursor="Hand"/>
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>
