<Window x:Class="WorkOrderManagementSystem.Views.Pages.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="551" Width="469"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Add New Customer" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="First Name" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Name="FirstNameBox" Height="35" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Last Name" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Name="LastNameBox" Height="35" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Email" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Name="EmailBox" Height="35" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Phone" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Name="PhoneBox" Height="35" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Address (Optional)" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Name="AddressBox" Height="35" Padding="10" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Right">
                <Button Name="SaveBtn" 
                        Content="Save" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Click="SaveBtn_Click"/>
                <Button Name="CancelBtn" 
                        Content="Cancel" 
                        Background="#999" 
                        Foreground="White" 
                        Padding="20,10"
                        Click="CancelBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
