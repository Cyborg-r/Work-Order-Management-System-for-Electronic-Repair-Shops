<Window x:Class="WorkOrderManagementSystem.Views.Pages.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="594" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
	<Grid Margin="20">
		<StackPanel>
			<TextBlock Text="Add New User" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

			<TextBlock Text="First Name" FontSize="12" Margin="0,0,0,5"/>
			<TextBox Name="FirstNameBox" Height="35" Padding="10" Margin="0,0,0,15"/>

			<TextBlock Text="Last Name" FontSize="12" Margin="0,0,0,5"/>
			<TextBox Name="LastNameBox" Height="35" Padding="10" Margin="0,0,0,15"/>

			<TextBlock Text="Username" FontSize="12" Margin="0,0,0,5"/>
			<TextBox Name="UsernameBox" Height="35" Padding="10" Margin="0,0,0,15"/>

			<TextBlock Text="Email" FontSize="12" Margin="0,0,0,5"/>
			<TextBox Name="EmailBox" Height="35" Padding="10" Margin="0,0,0,15"/>

			<TextBlock Text="Password" FontSize="12" Margin="0,0,0,5"/>
			<PasswordBox Name="PasswordBox" Height="35" Padding="10" Margin="0,0,0,15"/>

			<TextBlock Text="Role" FontSize="12" Margin="0,0,0,5"/>
			<ComboBox Name="RoleComboBox" Height="35" Padding="10" Margin="0,0,0,20">
				<ComboBoxItem>Admin</ComboBoxItem>
				<ComboBoxItem>Technician</ComboBoxItem>
				<ComboBoxItem>Staff</ComboBoxItem>
			</ComboBox>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Name="SaveBtn" 
                        Content="Create" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Click="SaveBtn_Click"/>
				<Button Name="CancelBtn" 
                        Content="Cancel" 
                        Background="#999" 
                        Foreground="White" 
                        Padding="20,10"
                        Click="CancelBtn_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
