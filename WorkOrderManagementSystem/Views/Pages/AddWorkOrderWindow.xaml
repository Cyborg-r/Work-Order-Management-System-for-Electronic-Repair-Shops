<Window x:Class="WorkOrderManagementSystem.Views.Pages.AddWorkOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Work Order" Height="723" Width="501"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="20">
        <DockPanel>
            <!-- Close Button -->

            <!-- Title -->
            <TextBlock DockPanel.Dock="Top" 
                       Text="Create New Work Order" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <TextBlock DockPanel.Dock="Top" 
                       Text="Enter repair job details below" 
                       FontSize="12" 
                       Foreground="#666" 
                       Margin="0,0,0,20"/>

            <!-- Scrollable Content -->
            <ScrollViewer DockPanel.Dock="Bottom">
                <StackPanel>
                    <!-- Customer and Device Type Row -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Customer" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox Name="CustomerComboBox" 
                                      Height="40" 
                                      Padding="10"
                                      Background="White"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Device Type" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="DeviceTypeBox" 
                                     Height="40" 
                                     Padding="10"
                                     Background="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- Brand and Serial Number Row -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Brand" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="BrandBox" 
                                     Height="40" 
                                     Padding="10"
                                     Background="White"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Serial Number" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="SerialNumberBox" 
                                     Height="40" 
                                     Padding="10"
                                     Background="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- Issue Description -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Issue Description" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="IssueDescriptionBox" 
                                 Height="70" 
                                 Padding="10"
                                 Background="White"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Parts Required -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Parts Required" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="PartsRequiredBox" 
                                 Height="70" 
                                 Padding="10"
                                 Background="White"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Labor Cost, Parts Cost, Total Cost Row -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Labor Cost" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="LaborCostBox" 
                                     Height="40" 
                                     Padding="10"
                                     Background="White"
                                     Foreground="#C9A961"
                                     PreviewTextInput="NumberOnly_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Parts Cost" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="PartsCostBox" 
                                     Height="40" 
                                     Padding="10"
                                     Background="White"
                                     Foreground="#C9A961"
                                     PreviewTextInput="NumberOnly_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Total Cost" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="TotalCostBox" 
                                     Height="40" 
                                     Padding="10"
                                     Background="White"
                                     Foreground="#C9A961"
                                     IsReadOnly="True"/>
                        </StackPanel>
                    </Grid>

                    <!-- Technician and Status Row -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Assign Technician" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox Name="TechnicianComboBox" 
                                      Height="40" 
                                      Padding="10"
                                      Background="White"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Status" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox Name="StatusComboBox" 
                                      Height="40" 
                                      Padding="10"
                                      Background="White">
                                <ComboBoxItem>Pending</ComboBoxItem>
                                <ComboBoxItem>In Progress</ComboBoxItem>
                                <ComboBoxItem>Completed</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="SaveBtn" 
                                Content="Create Work Order" 
                                Background="#222" 
                                Foreground="White" 
                                Padding="40,12"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Margin="0,0,10,0"
                                Click="SaveBtn_Click"/>
                        <Button Name="CancelBtn2" 
                                Content="Cancel" 
                                Background="Transparent" 
                                Foreground="#666"
                                Padding="40,12"
                                FontSize="14"
                                Click="CancelBtn_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
