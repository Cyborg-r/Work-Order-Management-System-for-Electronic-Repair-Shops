<Page x:Class="WorkOrderManagementSystem.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard">
    <Grid Background="#F5F5F5" Margin="20">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Quick Stats -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Work Orders -->
                    <Border Background="White" CornerRadius="5" Padding="20" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Total Work Orders" FontSize="12" Foreground="#888" Margin="0,0,0,10"/>
                            <TextBlock Name="TotalWorkOrdersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed Orders -->
                    <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="20" Margin="10,0">
                        <StackPanel>
                            <TextBlock Text="Completed Orders" FontSize="12" Foreground="#888" Margin="0,0,0,10"/>
                            <TextBlock Name="CompletedOrdersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Pending Orders -->
                    <Border Grid.Column="2" Background="White" CornerRadius="5" Padding="20" Margin="10,0">
                        <StackPanel>
                            <TextBlock Text="Pending Orders" FontSize="12" Foreground="#888" Margin="0,0,0,10"/>
                            <TextBlock Name="PendingOrdersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Revenue -->
                    <Border Grid.Column="3" Background="White" CornerRadius="5" Padding="20" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Total Revenue" FontSize="12" Foreground="#888" Margin="0,0,0,10"/>
                            <TextBlock Name="TotalRevenueText" Text="Php 0" FontSize="32" FontWeight="Bold" Foreground="#9C27B0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Work Orders -->
                <TextBlock Text="Recent Work Orders" FontSize="18" FontWeight="Bold" Margin="0,30,0,15"/>
                <Border Background="White" CornerRadius="5" Padding="15">
                    <DataGrid Name="RecentWorkOrdersGrid" 
                              IsReadOnly="True" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Work Order #" Binding="{Binding WorkOrderNumber}" Width="120"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150"/>
                            <DataGridTextColumn Header="Device" Binding="{Binding DeviceType}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
