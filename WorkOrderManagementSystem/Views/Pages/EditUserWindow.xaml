<Window x:Class="WorkOrderManagementSystem.Views.Pages.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" 
        Height="700" 
        Width="460"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="30">
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Edit User" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,5"/>
                    <TextBlock Text="Update user information and permissions" FontSize="12" Foreground="#999" Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Separator -->
            <Border DockPanel.Dock="Top" Height="1" Background="#E0E0E0" Margin="0,0,0,20"/>

            <!-- Scrollable Content -->
            <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Username -->
                    <TextBlock Text="Username *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <TextBox Name="UsernameBox" 
                             Height="40" 
                             Padding="12" 
                             Margin="0,0,0,18"
                             Background="#F5F5F5"
                             FontSize="12"
                             IsReadOnly="True"
                             Foreground="#666"/>

                    <!-- New Password -->
                    <TextBlock Text="New Password (leave blank to keep current)" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <PasswordBox Name="PasswordBox" 
                                 Height="40" 
                                 Padding="12" 
                                 Margin="0,0,0,18"
                                 Background="#F5F5F5"
                                 FontSize="12"/>

                    <!-- First Name -->
                    <TextBlock Text="First Name" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <TextBox Name="FirstNameBox" 
                             Height="40" 
                             Padding="12" 
                             Margin="0,0,0,18"
                             Background="#F5F5F5"
                             FontSize="12"/>

                    <!-- Last Name -->
                    <TextBlock Text="Last Name" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <TextBox Name="LastNameBox" 
                             Height="40" 
                             Padding="12" 
                             Margin="0,0,0,18"
                             Background="#F5F5F5"
                             FontSize="12"/>

                    <!-- Email -->
                    <TextBlock Text="Email" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <TextBox Name="EmailBox" 
                             Height="40" 
                             Padding="12" 
                             Margin="0,0,0,18"
                             Background="#F5F5F5"
                             FontSize="12"/>

                    <!-- Role -->
                    <TextBlock Text="Role *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <ComboBox Name="RoleComboBox" 
                              Height="40" 
                              Padding="12" 
                              Margin="0,0,0,18"
                              Background="#F5F5F5"
                              FontSize="12">
                        <ComboBoxItem>Admin</ComboBoxItem>
                        <ComboBoxItem>Technician</ComboBoxItem>
                        <ComboBoxItem>Staff</ComboBoxItem>
                    </ComboBox>

                    <!-- Status -->
                    <TextBlock Text="Status *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#333"/>
                    <ComboBox Name="StatusComboBox" 
                              Height="40" 
                              Padding="12" 
                              Margin="0,0,0,30"
                              Background="#F5F5F5"
                              FontSize="12">
                        <ComboBoxItem>Active</ComboBoxItem>
                        <ComboBoxItem>Inactive</ComboBoxItem>
                    </ComboBox>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                        <Button Name="SaveBtn" 
                                Content="Save Changes" 
                                Background="#1A1A1A" 
                                Foreground="White" 
                                Height="40"
                                Margin="0,0,10,0"
                                Click="SaveBtn_Click"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                MinWidth="150"/>
                        <Button Name="CancelBtn" 
                                Content="Cancel" 
                                Background="White" 
                                Foreground="#333" 
                                Height="40"
                                Margin="0,0,10,0"
                                Click="CancelBtn_Click"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                MinWidth="100"/>
                        <Button Name="DeleteBtn" 
                                Content="Delete User" 
                                Background="#F44336" 
                                Foreground="White" 
                                Height="40"
                                Margin="0,0,0,0"
                                Click="DeleteBtn_Click"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                MinWidth="120"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
