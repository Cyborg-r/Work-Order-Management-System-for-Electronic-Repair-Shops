<Window x:Class="WorkOrderManagementSystem.Views.Pages.TransactionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Details" Height="616" Width="414"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
	<Grid Margin="20">
		<DockPanel>
			<!-- Close Button -->

			<!-- Title -->
			<TextBlock DockPanel.Dock="Top" 
                       Name="TitleBlock"
                       Text="Transaction Details" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

			<!-- Content -->
			<ScrollViewer DockPanel.Dock="Bottom">
				<StackPanel>
					<!-- Customer Section -->
					<Grid Margin="0,0,0,20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<StackPanel>
							<TextBlock Text="Customer" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="CustomerNameBlock" FontSize="14" Foreground="#333" FontWeight="SemiBold" Margin="0,0,0,3"/>
							<TextBlock Name="CustomerPhoneBlock" FontSize="12" Foreground="#666" Margin="0,0,0,2"/>
							<TextBlock Name="CustomerEmailBlock" FontSize="12" Foreground="#666"/>
						</StackPanel>

						<StackPanel Grid.Column="1">
							<TextBlock Text="Status" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<Border Background="#222" CornerRadius="3" Padding="8,4" Width="80">
								<TextBlock Name="StatusBlock" FontSize="12" Foreground="White" FontWeight="SemiBold" TextAlignment="Center"/>
							</Border>
						</StackPanel>
					</Grid>

					<!-- Device Section -->
					<Grid Margin="0,0,0,20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<StackPanel>
							<TextBlock Text="Device" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="DeviceTypeBlock" FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
						</StackPanel>

						<StackPanel Grid.Column="1">
							<TextBlock Text="Brand" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="BrandBlock" FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
						</StackPanel>
					</Grid>

					<!-- Serial Number -->
					<StackPanel Margin="0,0,0,20">
						<TextBlock Text="Serial Number" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
						<TextBlock Name="SerialNumberBlock" FontSize="13" Foreground="#2196F3" FontWeight="SemiBold"/>
					</StackPanel>

					<!-- Issue Description -->
					<StackPanel Margin="0,0,0,20">
						<TextBlock Text="Issue Description" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
						<TextBlock Name="IssueBlock" FontSize="13" Foreground="#333" TextWrapping="Wrap"/>
					</StackPanel>

					<!-- Parts Used -->
					<StackPanel Margin="0,0,0,20">
						<TextBlock Text="Parts Used" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
						<TextBlock Name="PartsUsedBlock" FontSize="13" Foreground="#333"/>
					</StackPanel>

					<!-- Costs Section -->
					<Grid Margin="0,0,0,20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<StackPanel>
							<TextBlock Text="Labor Cost" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="LaborCostBlock" FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
						</StackPanel>

						<StackPanel Grid.Column="1">
							<TextBlock Text="Parts Cost" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="PartsCostBlock" FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
						</StackPanel>

						<StackPanel Grid.Column="2">
							<TextBlock Text="Total Cost" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="TotalCostBlock" FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
						</StackPanel>
					</Grid>

					<!-- Technician, Date, Duration Section -->
					<Grid Margin="0,0,0,20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<StackPanel>
							<TextBlock Text="Technician" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="TechnicianBlock" FontSize="13" Foreground="#333"/>
						</StackPanel>

						<StackPanel Grid.Column="1">
							<TextBlock Text="Date Completed" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="DateCompletedBlock" FontSize="13" Foreground="#333"/>
						</StackPanel>

						<StackPanel Grid.Column="2">
							<TextBlock Text="Duration" FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
							<TextBlock Name="DurationBlock" FontSize="13" Foreground="#333"/>
						</StackPanel>
					</Grid>

					<!-- Buttons -->
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
						<Button Name="PrintBtn" 
                                Content="Print Receipt" 
                                Background="Transparent" 
                                Foreground="#333"
                                BorderThickness="1"
                                BorderBrush="#DDD"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Click="PrintBtn_Click"/>
						<Button Name="CloseBtn2" 
                                Content="Close" 
                                Background="#999" 
                                Foreground="White" 
                                Padding="20,10"
                                Click="CloseBtn_Click"/>
					</StackPanel>
				</StackPanel>
			</ScrollViewer>
		</DockPanel>
	</Grid>
</Window>
